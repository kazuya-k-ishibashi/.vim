set nobackup
set noswapfile
set showcmd

set number
set cursorline
set smartindent
set visualbell
set showmatch
set laststatus=2
set wildmode=list:longest
syntax enable

set expandtab
set tabstop=4
set shiftwidth=4

set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
nmap <Esc><Esc> :nohlsearch<CR><Esc>

filetype plugin on

